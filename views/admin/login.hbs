<link rel='stylesheet' href='/stylesheets/login.css' />

<h1>{{title}}</h1>
{{#if conocido}}
<p>Hola {{nombre}} <a href="/admin/login/salir">Salir</a></p>
{{/if}}

<h2>Iniciar sesión</h2>

<div class="container">
    <form action="/admin/login" method="post">
        <div id="hola" class="row mb-3 area">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Usuario</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputUser" name="usuario">
            </div>
        </div>
        <div class="row mb-3 area">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Contraseña</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputPassword" name="password">
            </div>
        </div>
        <button type="submit" style="margin-left: 47%" class="btn btn-primary">Ingresar</button>
    </form>
    <div class="error">
        {{#if error}}
        <p>Usuario y/o contraseña incorrectos</p>
        {{/if}}
    </div>
</div>
