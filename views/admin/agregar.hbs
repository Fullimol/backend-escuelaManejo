<div class="conainer" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h1 style="text-align: center; margin-bottom: 50px; margin-top: -50px">Agregar novedad</h1>
            <form action="/admin/novedades/agregar" method="post">
                <input class="mb-3 row form-control form-control-lg" type="text" name="titulo" placeholder="TÃ­tulo" aria-label=".form-control-lg example">
                <input class="mb-3 row form-control" type="text" name="subtitulo" placeholder="Subtitulo" aria-label="default input example">
